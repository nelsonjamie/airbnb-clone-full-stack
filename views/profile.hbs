<nav class="mb-3">{{> navbar}}</nav>
<div class="container py-4">
      <div class="row row-cols-2">
        <div class="col">
          <form action="/users/{{user._id}}?_method=PATCH" method="post">
            <p class="h2 border-bottom">Profile</p>
            <div class="mb-3 text-left">
              <label for="full-name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="full-name"
                value="{{user.name}}"
              />
            </div>
            <div class="mb-3 text-left">
              <label for="full-name" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                value="{{user.email}}"
              />
            </div>
            <div class="mb-3 text-left">
              <label for="profile" class="form-label">Profile Picture</label>
            </div>
            <div class="mb-3 text-left">
              <img
                id="avatar-img"
                src="{{user.avatar}}"
                alt="avatar image"
              />
            </div>
            <input
              type="text"
              class="form-control"
              id="full-name"
              value="{{user.avatar}}"
            />

            <button class="btn btn-success">Save Changes</button>
          </form>
        </div>
        <div class="col">
          <p class="h2 border-bottom">My Listings</p>
          <button class="btn btn-success">List a House</button>
        </div>
      </div>
    </div>

    <!--END PROFILE SECTION-->
